<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.plan9.naseemdev.naseem.PrincipalShowTestAttempts"
    android:background="@drawable/b3">
    <TextView
        android:id="@+id/listing_students"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/string_principal_students_label"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textColor="@color/colorText"
        android:layout_margin="@dimen/principal_student_list_label_margin"
        android:padding="@dimen/principal_student_list_label_margin"
        android:textSize="@dimen/principal_student_list_label_text_size"
        android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/principal_reload_test_attempts"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_margin="@dimen/reload_image_margin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/reload_image_WH"
                android:src="@drawable/reload"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/reload_image_margin"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="@dimen/reload_text_size"
                android:textColor="@color/colorText"
                android:textStyle="bold"
                android:text="@string/string_reload_principal_test_attempts_1"/>
        </LinearLayout>
        <com.srx.widget.PullToLoadView
            android:id="@+id/principal_pull_to_load_test_attempts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</LinearLayout>
