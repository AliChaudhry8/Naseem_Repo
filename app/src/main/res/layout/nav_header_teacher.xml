<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_margin="@dimen/student_profile_pic_layout_margin"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/profilepicprogress"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/teacherprofilepic"
            android:background="@drawable/profile_bg"
            android:layout_width="@dimen/student_profile_pic_WH"
            android:layout_height="@dimen/student_profile_pic_WH"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/student_profile_text_view_layout_margin_left"
            android:layout_toRightOf="@id/teacherprofilepic"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_margin="@dimen/student_profile_text_view_margin"
                android:id="@+id/teacherschoolname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="gravity"
                android:textStyle="bold"
                android:gravity="left"
                android:text="Moon School"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
            <TextView
                android:layout_margin="@dimen/student_profile_text_view_margin"
                android:id="@+id/teachersectionname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="gravity"
                android:textStyle="bold"
                android:gravity="left"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
            <TextView
                android:layout_margin="@dimen/student_profile_text_view_margin"
                android:id="@+id/teacherusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="gravity"
                android:textStyle="bold"
                android:gravity="left"
                android:text="jonsnow"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
