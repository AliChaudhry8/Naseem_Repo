<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/color_test_list_view_item_background_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/show_test_activity_text_size"
                android:layout_margin="@dimen/show_test_activity_marks_padding"
                android:id="@+id/first_name_title"
                android:text="First Name: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"/>
            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/show_test_activity_text_size"
                android:layout_margin="@dimen/show_test_activity_marks_padding"
                android:id="@+id/second_name_title"
                android:layout_below="@id/first_name_title"
                android:text="Second Name: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"/>
            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/show_test_activity_text_size"
                android:layout_margin="@dimen/show_test_activity_marks_padding"
                android:id="@+id/username_title"
                android:layout_below="@id/second_name_title"
                android:text="Username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"/>
            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/show_test_activity_text_size"
                android:layout_margin="@dimen/show_test_activity_marks_padding"
                android:id="@+id/student_attempt_title"
                android:layout_below="@id/username_title"
                android:text="Attempts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9">
            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/show_test_activity_text_size"
                android:layout_margin="@dimen/show_test_activity_marks_padding"
                android:id="@+id/first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"/>
            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/show_test_activity_text_size"
                android:layout_margin="@dimen/show_test_activity_marks_padding"
                android:id="@+id/second_name"
                android:layout_below="@id/first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"/>
            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/show_test_activity_text_size"
                android:layout_margin="@dimen/show_test_activity_marks_padding"
                android:id="@+id/user_name"
                android:layout_below="@id/second_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"/>
            <Button
                android:textStyle="bold"
                android:textSize="@dimen/show_test_activity_text_size"
                android:layout_margin="@dimen/show_test_activity_marks_padding"
                android:background="@drawable/button_bg"
                android:id="@+id/student_attempt"
                android:layout_below="@id/user_name"
                android:text="View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>