<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_test_list_view_item_background_color">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp">
            <ImageView
                android:id="@+id/test_imageview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 />
            <ProgressBar
                android:id="@+id/progress_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                />
        </RelativeLayout>
        <android.support.v7.widget.AppCompatEditText
            android:textStyle="bold"
            android:textSize="@dimen/show_test_activity_text_size"
            android:layout_margin="@dimen/show_test_activity_marks_padding"
            android:padding="@dimen/show_test_activity_edit_text_padding"
            android:id="@+id/new_image_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:background="@drawable/edit_text_bg_1"
            android:hint="Enter Title"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="2000"
            android:maxLines="10"
            />
        <android.support.v7.widget.AppCompatEditText
            android:textStyle="bold"
            android:textSize="@dimen/show_test_activity_text_size"
            android:layout_margin="@dimen/show_test_activity_marks_padding"
            android:padding="@dimen/show_test_activity_edit_text_padding"
            android:id="@+id/new_image_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:background="@drawable/edit_text_bg_1"
            android:hint="Enter Description"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="2000"
            android:maxLines="10"
            android:focusable="true"
            android:focusableInTouchMode="true"/>
        <android.support.v7.widget.AppCompatEditText
            android:textStyle="bold"
            android:textSize="@dimen/show_test_activity_text_size"
            android:layout_margin="@dimen/show_test_activity_marks_padding"
            android:padding="@dimen/show_test_activity_edit_text_padding"
            android:id="@+id/new_image_marks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:background="@drawable/edit_text_bg_1"
            android:hint="Enter Marks"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="2000"
            android:digits="0123456789"
            android:maxLines="10"
            android:focusable="true"
            android:focusableInTouchMode="true"/>
        <android.support.v7.widget.AppCompatButton
            android:textStyle="bold"
            android:textSize="@dimen/show_test_activity_text_size"
            android:layout_margin="@dimen/show_test_activity_marks_padding"
            android:padding="5dp"
            android:id="@+id/edit_image_question"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:background="@drawable/button_bg"
            android:text="Edit"
            android:textAlignment="center"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="2000"
            android:maxLines="10"/>
        <android.support.v7.widget.AppCompatButton
            android:textStyle="bold"
            android:textSize="@dimen/show_test_activity_text_size"
            android:layout_margin="@dimen/show_test_activity_marks_padding"
            android:padding="5dp"
            android:id="@+id/remove_image_question"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:background="@drawable/button_danger"
            android:text="Remove"
            android:textAlignment="center"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="2000"
            android:maxLines="10"/>


    </LinearLayout>
</android.support.v7.widget.CardView>