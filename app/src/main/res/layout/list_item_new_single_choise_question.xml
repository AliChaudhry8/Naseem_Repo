<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_test_list_view_item_background_color"
        android:padding="@dimen/show_test_activity_list_padding"
        android:descendantFocusability="beforeDescendants">

        <android.support.v7.widget.AppCompatEditText
            android:textStyle="bold"
            android:textSize="@dimen/show_test_activity_text_size"
            android:layout_margin="@dimen/show_test_activity_marks_padding"
            android:padding="@dimen/show_test_activity_edit_text_padding"
            android:id="@+id/new_single_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:background="@drawable/edit_text_bg_1"
            android:hint="Enter Question"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="2000"
            android:maxLines="10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            />

        <android.support.v7.widget.AppCompatEditText
            android:textStyle="bold"
            android:textSize="@dimen/show_test_activity_text_size"
            android:layout_margin="@dimen/show_test_activity_marks_padding"
            android:padding="@dimen/show_test_activity_edit_text_padding"
            android:id="@+id/new_single_question_marks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:background="@drawable/edit_text_bg_1"
            android:hint="Enter Marks"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="2000"
            android:maxLines="10"
            android:focusable="true"
            android:focusableInTouchMode="true"/>
        <android.support.v7.widget.AppCompatButton
            android:textStyle="bold"
            android:textSize="@dimen/show_test_activity_text_size"
            android:layout_margin="@dimen/show_test_activity_marks_padding"
            android:padding="5dp"
            android:id="@+id/edit_single_question"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:background="@drawable/button_bg"
            android:text="Edit"
            android:textAlignment="center"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="2000"
            android:maxLines="10"/>
        <android.support.v7.widget.AppCompatButton
            android:textStyle="bold"
            android:textSize="@dimen/show_test_activity_text_size"
            android:layout_margin="@dimen/show_test_activity_marks_padding"
            android:padding="5dp"
            android:id="@+id/remove_single_question"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:background="@drawable/button_danger"
            android:text="Remove"
            android:textAlignment="center"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="2000"
            android:maxLines="10"/>
        <android.support.v7.widget.AppCompatButton
            android:textStyle="bold"
            android:textSize="@dimen/show_test_activity_text_size"
            android:layout_margin="@dimen/show_test_activity_marks_padding"
            android:padding="5dp"
            android:id="@+id/meta_text_question"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:background="@drawable/button_bg"
            android:text="Show MetaData"
            android:textAlignment="center"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="2000"
            android:maxLines="10"/>
        <EditText
            android:id="@+id/spinner_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:background="@drawable/edit_text_bg"
            android:enabled="false"
            />
        <EditText
            android:id="@+id/spinner_grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:background="@drawable/edit_text_bg"
            android:enabled="false"
            />
        <EditText
            android:id="@+id/spinner_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:background="@drawable/edit_text_bg"
            android:enabled="false"
            />
        <EditText
            android:id="@+id/spinner_subtopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:background="@drawable/edit_text_bg"
            android:enabled="false"
            />
        <EditText
            android:id="@+id/spinner_inputmode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:background="@drawable/edit_text_bg"
            android:enabled="false"
            />
        <EditText
            android:id="@+id/spinner_presentationmode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:background="@drawable/edit_text_bg"
            android:enabled="false"
            />
        <EditText
            android:id="@+id/spinner_cognitivefaculty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:background="@drawable/edit_text_bg"
            android:enabled="false"
            />
        <EditText
            android:id="@+id/spinner_steps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:background="@drawable/edit_text_bg"
            android:enabled="false"
            />
        <EditText
            android:id="@+id/spinner_teacherdifficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:background="@drawable/edit_text_bg"
            android:enabled="false"
            />
        <EditText
            android:id="@+id/spinner_deviation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:background="@drawable/edit_text_bg"
            android:enabled="false"
            />
        <EditText
            android:id="@+id/spinner_ambiguity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:background="@drawable/edit_text_bg"
            android:enabled="false"
            />
        <EditText
            android:id="@+id/spinner_clarity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:background="@drawable/edit_text_bg"
            android:enabled="false"
            />
        <EditText
            android:id="@+id/spinner_blooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:background="@drawable/edit_text_bg"
            android:enabled="false"
            />

    </LinearLayout>
</android.support.v7.widget.CardView>