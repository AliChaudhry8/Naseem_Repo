<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/principal_student_teacher_card_view_margin"
    card_view:cardCornerRadius="@dimen/principal_student_teacher_card_view_corner"
    card_view:cardElevation="@dimen/principal_student_teacher_card_view_margin"
    android:background="@color/color_transparent_20_p">
    <RelativeLayout
        android:layout_margin="@dimen/principal_student_teacher_card_view_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_test_list_view_item_background_color">

        <LinearLayout
            android:id="@+id/label_layout"
            android:layout_marginLeft="@dimen/principal_student_teacher_linear_layout_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/show_test_activity_text_size"
                android:layout_margin="@dimen/principal_test_layout_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_transparent_40_p"
                android:gravity="left"
                android:textAlignment="gravity"
                android:text="@string/string_Group_Name"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/principal_student_teacher_linear_layout_margin"
            android:layout_toRightOf="@id/label_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textStyle="bold"
                android:textSize="@dimen/show_test_activity_text_size"
                android:layout_margin="@dimen/principal_test_layout_margin"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:gravity="left"
                android:textAlignment="gravity"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>